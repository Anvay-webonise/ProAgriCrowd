<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

 <changeSet author="sudarshan" id="addresses">
		<tagDatabase tag="before_addresses"/>
 </changeSet>
 <changeSet author="sudarshan" id="createTableAddresses" dbms="mysql">
		<createTable tableName="ADDRESSES">
			<column name="ADDR_ID" type="int(11)" autoIncrement="true">
				<constraints nullable = "false" primaryKey = "true" primaryKeyName = "ADDR_ID"/>
			</column>
			<column name="ADDR_LINE1" type="varchar(255)">
				<constraints nullable = "false"/>
			</column>
			<column name="ADDR_LINE2" type="varchar(255)">
				<constraints nullable = "true"/>
			</column>
			<column name="ADDR_AREA" type="varchar(255)">
				<constraints nullable = "true"/>
			</column>
			<column name="ADDR_CITY" type="varchar(30) ">
				<constraints nullable = "false"/>
			</column>
			<column name="ADDR_STATE" type="varchar(255)">
				<constraints nullable = "false"/>
			</column>
			<column name="ADDR_COUNTRY" type="varchar(255)">
				<constraints nullable = "false"/>
			</column>
			<column name="ADDR_PINCODE" type="int(11)">
				<constraints nullable = "false"/>
			</column>
			<column name="ADDR_CREATION_DATE" type="datetime" defaultValue = "NOW()">
				<constraints nullable = "false"/>
			</column>
	 </createTable>
	</changeSet>
</databaseChangeLog>