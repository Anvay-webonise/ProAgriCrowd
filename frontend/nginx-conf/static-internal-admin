#	...
# }
# statements for each of your virtual hosts to this file

##
# You should look at the following URL's in order to grasp a solid understanding
# of Nginx configuration files in order to fully unleash the power of Nginx.
# http://wiki.nginx.org/Pitfalls
# http://wiki.nginx.org/QuickStart
# http://wiki.nginx.org/Configuration
#
# Generally, you will want to move this file somewhere, and start with a clean
# file but keep this around for reference. Or just disable in sites-enabled.
#
# Please see /usr/share/doc/nginx-doc/examples/ for more detailed examples.
##

server {
	listen 80 default_server;
	#listen [::]:80 default_server ipv6only=on;

	root /usr/share/nginx/html;
	index index.html index.htm;

	# Make site accessible from http://local.internaladmin.com/
	server_name local.internaladmin.com;
	add_header Access-Control-Allow-Origin 'http://local.internaladmin.com';

	location /Magnus.Admin {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		proxy_pass http://localhost:8090/Magnus.Admin;
		# Uncomment to enable naxsi on this location
		# include /etc/nginx/naxsi.rules
	}

	location /sapi {
			rewrite ^/sapi/(.*)$ /$1 break;
	        proxy_pass http://localhost:8080;
			proxy_redirect     off;
			proxy_set_header   Host $host;
	}
	location @sapi {
		proxy_pass http://127.0.0.1:8080;
	}

	location ~ \.(jsf|bsf) {
        rewrite ^\.(jsf|bsf)/(.*)$ /Magnus.Admin/$1 break;
        proxy_pass http://localhost:8090;
    }

	location ~ \.(html|js|css|png|gif) {
		try_files $uri $uri/ @mapp;
	}

	location @mapp {
		proxy_pass http://127.0.0.1:4568;
		proxy_intercept_errors on;
		recursive_error_pages on;
		error_page 404 = @lagecy;
	}

	location @lagecy {
    		rewrite ^(jsf|bsf)/(.*)$ /Magnus.Admin/$1 break;
		    proxy_pass http://127.0.0.1:8090;
	}
}


